.content{
    width: 100%;
    height: 100%;
    background: #313030;
    position: fixed;
    left: 0rpx;
    right: 0rpx;
}
/* 将歌曲封面设置为背景图片 */
.big_img{
    width: 100%;
    height: 100%;
    opacity: 0.25;
    
}
/* 歌曲标题 */
.title{
    width: 100%;
    height: 40rpx;
    position: absolute;
    left: 0rpx;
    top: 80rpx;
    color: white;
    text-align: center;
}

.middle{
    width: 100%;
    height: 700rpx;
    position: absolute;
    left: 0rpx;
    top: 170rpx;
}

.middle-swipper{
    width: 100%;
    height: 100%;
}

.cd-wrapper{
    width: 100%;
    height: 100%;
}
/* 存放封面的view */
.cd-image{
    width: 600rpx;
    height: 600rpx;
    margin: 50rpx auto;
}
/* 封面图片样式 */
.cd-image image{
    width: 400rpx;
    height: 400rpx;
    /* 圆角化 */
    border-radius: 50%;
    /* 加边框 */
    border: #202020 solid 100rpx;
    /* 添加动画 */
    animation: zhuan 15s linear infinite;
}

@keyframes zhuan{
    from{
        transform: rotate(0deg);
    }
    to{
        transform:rotate(360deg);
    }
}

/* 歌词滚动样式 */
.lyric-wrapper{
    width: 80%;
    height: 100%;
    margin: 0 auto;
}
/* 每句歌词样式 */
.lyric-wrapper text{
    display: block;
    text-align: center;
    color: rgba(255, 255, 255, 0.5);
    font-size: 34rpx;
    line-height: 20px;
}
/* 正在唱的歌词样式 */
.lyric-wrapper .currentLyric{
    color: #c20c0c;
    font-size: 34rpx;
}
/* 滚动条 */
::-webkit-scrollbar{
    width: 0rpx;
    height: 0rpx;
}
/* 设置controls */
.controls{
    width: 100%;
    height: 150rpx;
    background: #c20c0c;
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
}
.controls image{
    width: 100rpx;
    height: 100rpx;
    margin-left: 43rpx;
    margin-top: 20rpx;
}

/* 进度条样式 */
.progress{
    width: 100%;
    height: 100rpx;
    position: absolute;
    bottom: 180rpx;
    display: flex;
  }

  /* 调整播放时间play_time和结束时间end_time */
  .play_time,.end_time{
    width: 15%;
    height: 100%;
    color: white;
    margin-top: 20rpx;
  }

  /* 进度条样式 */
  .progress slider{
    width: 70%;
    height: 100%;
  }